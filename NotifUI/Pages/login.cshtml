@page
@model NotifUI.Pages.loginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<html>
	<head>
		<title>
			LogIn
		</title>
	</head>
	<body>
		<form method="post" asp-antiforgery="true">
			<p>
				<label asp-for="userp.email">Адрес электронной почты</label>
				<input type="email" asp-for="userp.email" required/>		
			</p>
			<p>
				<label asp-for="userp.password">Пароль</label>
				<input type="password" asp-for="userp.password" required />
			</p>
		<p>@Model.message</p>
		<input type="submit" value="Отправить" />
		</form>
	</body>
</html>