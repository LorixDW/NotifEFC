@page
@model NotifUI.Pages.registrModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<html>
<head>
	<title>
		Registration
	</title>
</head>
<body>
	<form method="post" asp-antiforgery="true">
		<p>
			<label asp-for="person.l_name">Фамилия</label>
			<input type="text" asp-for="person.l_name" required/>
		</p>
		<p>
			<label asp-for="person.f_name">Имя</label>
			<input type="text" asp-for="person.f_name" required/>
		</p>
		<p>
			<label asp-for="person.patronimic">Отчество</label>
			<input type="text" asp-for="person.patronimic" />
		</p>
		<p>
			<label asp-for="person.number">Номер телефона</label>
			<input type="text" asp-for="person.number" pattern="[0-9]{11,13}" required/>
		</p>
		<p>
			<label asp-for="person.email">Адрес электронной почты</label>
			<input type="email" asp-for="person.email" required/>
		</p>
		<p>
			<label asp-for="person.password">Пароль</label>
			<input type="password" asp-for="person.password" required/>
		</p>
		<p>@Model.message</p>
		<input type="submit" value="Отправить"/>
	</form>
</body>
</html>